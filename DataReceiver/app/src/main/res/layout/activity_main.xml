<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.example.kbud499.datareceiver.ConsumerActivity" >    <TextView        android:id="@+id/tvStatus"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:gravity="center"        android:layout_weight="0.06"        android:textSize="24sp"        android:textStyle="bold" />    <TextView        android:id="@+id/response"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <Button        android:id="@+id/buttonStartRecord"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:onClick="mOnClick"        android:text="Start Record"        android:textSize="24sp"        android:textStyle="bold" />    <Button        android:id="@+id/buttonStopRecord"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:onClick="mOnClick"        android:text="Stop Record"        android:textSize="24sp"        android:textStyle="bold" />    <Button        android:id="@+id/buttonClear"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:onClick="mOnClick"        android:text="Clear Record"        android:textSize="24sp"        android:textStyle="bold" />    <Button        android:id="@+id/buttonWriteFile"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:onClick="mOnClick"        android:text="Write File"        android:textSize="24sp"        android:textStyle="bold" /></LinearLayout>